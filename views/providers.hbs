<link rel="stylesheet" href="css/main.css">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<script src="js/categories.js"></script>
<script src="js/postings.js"></script>
<script src="js/providers.js"></script>
<section id="c_providers">
    <h1 id="providers-header">Service Providers</h1>
    <div id="c_providersInner">
        <aside id="leftNav">
        <div id="c_showLocation" class="c_leftNav">
                <label id="loc-label">Location</label>
                <input name="i_location" id="i_location" type="text" oninput="searchLocation()" onchange="searchLocation()">
                <div id="c_locDropdown" class="c_dropdown"></div>
            </div>
            <div id="c_distSlider" class="c_leftNav">
                <label id="dist-label">Within <b id="postingsDistShow">50</b> km radius</label>
                <input type="range" min="1" max="200" value = "25" class="distSlider" id="postingsDistSlider">
            </div>
            <div id="c_categories" class="c_leftNav">
                <label id="cat-label">Category</label>
                <div>
                    <input name="i_category" id="i_category" type="text" placeholder="Enter a category" oninput="chooseCategory()" onchange="chooseCategory()">
                    <span id="deleteCategory">Ã—</span>
                </div>
                <div id="c_catDropdown">
                </div>
            </div>
    </aside>
    <main id="c_providersCardHolder">
        {{#each providersData}}
            <div class="provider-card" data-categories="{{#each proficiencies}}{{@key}} {{/each}}{{firstName}} {{lastName}}">
                <div>
                    {{!-- {{#if healthDoc}}
                        <img class="cert-logo" src="assets/images/certified.png"/>
                    {{/if}} --}}
                    <img class="profile-pic" src="{{image}}"/>
                </div>
                <div class="card-header">
                    <h1>{{firstName}} {{lastName}} </h1>
                    {{#if healthDoc}}
                        <img class="cert-logo" src="assets/images/certified.png"/>
                    {{/if}}
                </div>
                <p class="card-desc">{{desc}}</p>
                {{#each proficiencies}}
                    <div class="pro-label">{{@key}}</div>
                    <div class="w3-white w3-medium">
                        <div class="w3-container w3-round w3-blue" style="width:{{multiply (divide this 5) 100}}%">
                            <div class="pro-rating">{{this}}</div>
                        </div>
                    </div>
                {{/each}}
                <div class="card-dist-info"><img src="assets/images/ruler.png"/><span class="calcDist"></span> km away</div>
            </div>
        {{/each}}
    </main>
</section>
</div>
    
